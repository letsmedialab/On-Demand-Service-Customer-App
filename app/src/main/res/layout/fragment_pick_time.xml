<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/black"
            android:text="Select starting date :"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/datepicker_recycler"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="120dp">

        </android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginVertical="5dp"
            android:background="@color/greyLight"></View>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:text="Select starting time :"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    android:id="@+id/time1"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/time1text"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="9:00 AM - 12:00 PM"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:paddingHorizontal="5dp"
                android:gravity="center"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    android:id="@+id/time2"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/time2text"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="12:00 PM - 3:00 PM"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    android:id="@+id/time3"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/time3text"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="3:00 PM - 6:00 PM"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:paddingHorizontal="5dp"
                android:gravity="center"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    android:id="@+id/time4"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/time4text"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="6:00 PM - 9:00 PM"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>

