<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/history_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/history_cart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="6dp"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/circle"
        android:tint="@color/ongoing"
        android:src="@drawable/ic_shopping_cart_black_24dp"/>
    
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/history_cart">
        <TextView
            android:id="@+id/history_date"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:text="Fri, 15 Jun 2018"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/history_1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Order ID:"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/history_date"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/history_order"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/history_1"
            android:layout_below="@id/history_date"
            android:text="123456"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@id/history_arrow"
        android:layout_centerVertical="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="10sp"
            android:text="Price"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/history_price"
            android:text="à§³"/>
        <TextView
            android:id="@+id/history_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="10,500"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/history_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:padding="0dp"
        android:tint="@color/grey"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>


</RelativeLayout>